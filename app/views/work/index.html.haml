= render partial: "main/header"
.main_container
	= image_tag('service_bg.jpg', :class => "main_bg")
	.row
		.col-md-12.content_bg
			.custom_container
				.margin-20-0
					.row
						.col-md-12.text-center.index_content_title.margin-20-0
							.line_left	
							WOKS 作品集
							.line_right
						.col-md-12.text-center.index_content_title.margin-top-20
							%span.category
								= link_to "全部", work_path		
							- @categories.each do |category|
								%span.category	
									= link_to work_path(:category_id => category.id) do
										= category.name					
						- @works.each do |work|		
							.col-md-4.col-sm-6.padding-0-20	
								.index_list_box.margin-top-20
									= link_to work_show_path(work) do
										.pic_box{:style => "background-image: url(#{work.first_photo.photo})"} 
									.index_content_title_small
										= "#{work.title}"
										%br
										= "#{work.address}|#{work.footage}坪"
									.hover_block2
										= link_to work_show_path(work) do
											%i.fa.fa-hand-pointer-o.fa-3
											%p See More	
					.row
						.col-md-12.text-center.page
							= paginate @works
	= render partial: "main/footer"